{
  "extends": [
    "eslint:recommended",
    "next",
    "next/core-web-vitals",
    "prettier",
    "plugin:jest/recommended"
  ],
  "plugins": ["prettier", "jest"],
  "rules": {
    "prettier/prettier": "error",
    "no-undef": "error",
    "no-unused-vars": "error",
    "quotes": [
      "error",
      "single",
      { "avoidEscape": true, "allowTemplateLiterals": true }
    ]
  },

  "globals": {
    "globalThis": "readonly"
  },
  "overrides": [
    {
      "files": ["__tests__/**", "src/components/ui/**/*.*"],
      "rules": {
        "no-undef": "off",
        "no-unused-vars": "off"
      }
    }
  ],
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  }
}
